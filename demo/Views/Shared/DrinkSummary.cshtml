@model Drink

@{
    var photopath = "/Images/" + @Model.ImageThumbnailUrl;
}
<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@photopath" alt="Load" asp-append-version="true"/>
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a>@Model.Name</a>
            </h3>
            <p>@Model.ShortDescription</p>
        </div>
        <div class="addtocart text-right">
            <p class="button">
                <a id="cartButton" class="btn btn-success"
                    asp-controller="ShoppingCart"
                    asp-action="AddToShoppingCart"
                    asp-route-drinkId="@Model.DrinkId"
                >
                    Add to cart
                </a>
            </p> 
        </div>
    </div>
</div>
@inject SignInManager<IdentityUser> SignInManager

@{
    if(SignInManager.IsSignedIn(User))
    {
        <form asp-controller="Account" asp-action="Logout" id="logoutForm" asp-area="" method="POST" class="navbar-right">
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                </li>
            </ul>
        </form>
    }
    else
    {
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a id="registerLink" asp-controller="Account" asp-action="Register">Register</a>
            </li>
            <li>
                <a id="loginLink" asp-controller="Account" asp-action="Login">Log in</a>
            </li>
        </ul>
    }
}